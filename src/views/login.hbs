<main class="form-signin text-center">
  <form action="/dashboard" method="POST">
    <img class="mb-4" src="/img/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Logeo</h1>

    <div class="form-floating">
      <input type="email" class="form-control" id="login_usuario" name="login_usuario" placeholder="name@example.com">
      <label for="login_usuario">Usuario</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="login_contrasena" name="login_contrasena"  placeholder="Password">
      <label for="login_contrasena">Contraseña</label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Guardar Sesión
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Iniciar Sesión</button>
    <p class="mt-5 mb-3 text-muted">&copy; Softmar</p>
  </form>
</main>